@model Telia.NTW.Web.ViewModel.Admin.Hantera.RedigeraAnvändareViewModel

@{
    ViewBag.Title = "Skapa användare";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="tsCrumbtrail tsCrumbtrail--middle tsWrapInner">
    <ul class="tsCrumbtrail-links" role="navigation">
        <li>@Html.ActionLink("Hantera", "Hantera")<i class="tsIcon-Breadcrumb"></i></li>
        <li>Skapa användare</li>
    </ul>
</div>

<div class="tsBodyText tsWrapInner tsMarginBottom--None tsMarginTop">
    <h1>Skapa användare</h1>
</div>

<div class="tsWrapInner tsMarginBottom">
    @using (Html.BeginForm())
    {
        @Html.Partial("_HanteraAnvändare")

		<div class="tsMarginTop">
			@Html.ActionLink("Avbryt", "Hantera", "Webstyrning", new { @class = "tsBtn--Regular" })
			<input type="submit" class="tsBtn--Regular tsMarginLeft" value="Skapa" />
		</div>
	}
</div>