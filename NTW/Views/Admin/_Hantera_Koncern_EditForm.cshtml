@using Sigma.Utils.Helpers
@using Telia.NTW.Web.ViewModel.Admin.Hantera
@model Koncern

<div class="tsWrapInner tsMarginBottom">
	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<!-- KoncernId -->
		<div class="tseTextField--Normal--Half--Inline tsMarginTop">
			@Html.LabelFor(m => m.KoncernId, new { @class = "tscForm-label" }, DisplayOptions.Humanize)
			@Html.TextBoxFor(m => m.KoncernId, new { @class = "tseInput", @type = "text" })
			@Html.ValidationMessageFor(m => m.KoncernId)
		</div>

		<!-- Koncernnamn -->
		<div class="tseTextField--Normal--Half--Inline tsMarginTop">
			@Html.LabelFor(m => m.Koncernnamn, new { @class = "tscForm-label" }, DisplayOptions.Humanize)
			@Html.TextBoxFor(m => m.Koncernnamn, new { @class = "tseInput", @type = "text" })
			@Html.ValidationMessageFor(m => m.Koncernnamn)
			@Html.HiddenFor(m => m.GroupId)
		</div>

		<div class="tsMarginTop">
			@Html.ActionLink("Avbryt", "Hantera", "Webstyrning", new { @class = "tsBtn--Regular" })
			<input type="submit" class="tsBtn--Regular tsMarginLeft" value="Spara" />
		</div>
	}
